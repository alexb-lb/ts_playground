{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots" : ["./typings"],
    "paths": {
      "@app/*": [
          "*"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}